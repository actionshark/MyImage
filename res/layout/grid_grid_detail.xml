<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
	xmlns:android="http://schemas.android.com/apk/res/android"
	xmlns:tools="http://schemas.android.com/tools"
	android:layout_width="match_parent"
	android:layout_height="wrap_content"
	android:background="@color/detail_grid_bg"
	android:orientation="horizontal">

	<LinearLayout
		android:layout_width="match_parent"
		android:layout_height="@dimen/detail_grid_height"
		android:background="@null"
		android:orientation="horizontal">

		<TextView
			android:id="@+id/tv_name"
			android:layout_width="@dimen/detail_grid_left_width"
			android:layout_height="match_parent"
			android:layout_marginRight="@dimen/detail_grid_divider"
			android:paddingLeft="@dimen/detail_grid_gap"
			android:paddingRight="@dimen/detail_grid_gap"
			android:gravity="right|center_vertical"
			android:textSize="@dimen/detail_grid_text"
			android:textColor="@color/detail_grid_name_text"
			android:background="@color/detail_grid_color" />

		<TextView
			android:id="@+id/tv_value"
			android:layout_width="match_parent"
			android:layout_height="match_parent"
			android:paddingLeft="@dimen/detail_grid_gap"
			android:paddingRight="@dimen/detail_grid_gap"
			android:gravity="left|center_vertical"
			android:lines="2"
			android:ellipsize="end"
			android:textSize="@dimen/detail_grid_text"
			android:textColor="@color/detail_grid_value_text"
			android:background="@color/detail_grid_color" />

	</LinearLayout>

</LinearLayout>
