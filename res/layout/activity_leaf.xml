<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
	xmlns:android="http://schemas.android.com/apk/res/android"
	xmlns:tools="http://schemas.android.com/tools"
	android:layout_width="match_parent"
	android:layout_height="match_parent"
	android:background="@color/activity_bg"
	android:orientation="vertical">

	<RelativeLayout
		android:id="@+id/rl_title"
		android:layout_width="match_parent"
		android:layout_height="@dimen/title_height"
		android:background="@color/title_bg"
		android:layout_marginBottom="@dimen/title_btm_gap">

		<TextView
			android:id="@+id/tv_title"
			android:layout_width="wrap_content"
			android:layout_height="wrap_content"
			android:layout_centerInParent="true"
			android:textSize="@dimen/title_text"
			android:textColor="@color/title_text"
			android:text="@string/app_name" />

		<ImageView
			android:id="@+id/iv_back"
			android:layout_width="@dimen/title_height"
			android:layout_height="@dimen/title_height"
			android:layout_alignParentLeft="true"
			android:layout_centerVertical="true"
			android:padding="@dimen/title_btn_padding"
			android:background="@drawable/btn_black_bg"
			android:scaleType="centerInside"
			android:src="@drawable/arrow_left" />

		<ImageView
			android:id="@+id/iv_paste"
			android:layout_width="@dimen/title_height"
			android:layout_height="@dimen/title_height"
			android:layout_toLeftOf="@id/iv_menu"
			android:layout_centerVertical="true"
			android:padding="@dimen/title_btn_padding"
			android:background="@drawable/btn_black_bg"
			android:scaleType="centerInside"
			android:src="@drawable/paste" />

		<ImageView
			android:id="@+id/iv_select"
			android:layout_width="@dimen/title_height"
			android:layout_height="@dimen/title_height"
			android:layout_alignParentRight="true"
			android:layout_centerVertical="true"
			android:padding="@dimen/title_btn_padding"
			android:background="@drawable/btn_black_bg"
			android:scaleType="centerInside"
			android:src="@drawable/select_enable" />

		<ImageView
			android:id="@+id/iv_menu"
			android:layout_width="@dimen/title_height"
			android:layout_height="@dimen/title_height"
			android:layout_alignParentRight="true"
			android:layout_centerVertical="true"
			android:padding="@dimen/title_btn_padding"
			android:background="@drawable/btn_black_bg"
			android:scaleType="centerInside"
			android:src="@drawable/menu" />

	</RelativeLayout>

	<GridView
		android:id="@+id/gv_grid"
		android:background="@color/grid_view_bg"
		android:layout_width="match_parent"
		android:layout_height="0dp"
		android:layout_weight="1"
		android:verticalSpacing="@dimen/grid_ver_gap"
		android:horizontalSpacing="@dimen/grid_hor_gap"
		android:numColumns="2" />

	<LinearLayout
		android:id="@+id/ll_menu"
		android:layout_width="match_parent"
		android:layout_height="@dimen/menu_height"
		android:background="@color/menu_bg"
		android:layout_marginTop="@dimen/menu_btn_gap"
		android:orientation="horizontal">

		<ImageView
			android:id="@+id/iv_share"
			android:layout_width="0dp"
			android:layout_height="match_parent"
			android:layout_weight="1"
			android:padding="@dimen/menu_btn_padding"
			android:layout_marginRight="@dimen/menu_btn_gap"
			android:background="@drawable/btn_blue_bg"
			android:scaleType="centerInside"
			android:src="@drawable/share" />

		<ImageView
			android:id="@+id/iv_edit"
			android:layout_width="0dp"
			android:layout_height="match_parent"
			android:layout_weight="1"
			android:padding="@dimen/menu_btn_padding"
			android:layout_marginRight="@dimen/menu_btn_gap"
			android:background="@drawable/btn_blue_bg"
			android:scaleType="centerInside"
			android:src="@drawable/edit" />

		<ImageView
			android:id="@+id/iv_copy"
			android:layout_width="0dp"
			android:layout_height="match_parent"
			android:layout_weight="1"
			android:padding="@dimen/menu_btn_padding"
			android:layout_marginRight="@dimen/menu_btn_gap"
			android:background="@drawable/btn_blue_bg"
			android:scaleType="centerInside"
			android:src="@drawable/copy" />

		<ImageView
			android:id="@+id/iv_cut"
			android:layout_width="0dp"
			android:layout_height="match_parent"
			android:layout_weight="1"
			android:padding="@dimen/menu_btn_padding"
			android:layout_marginRight="@dimen/menu_btn_gap"
			android:background="@drawable/btn_blue_bg"
			android:scaleType="centerInside"
			android:src="@drawable/cut" />

		<ImageView
			android:id="@+id/iv_delete"
			android:layout_width="0dp"
			android:layout_height="match_parent"
			android:layout_weight="1"
			android:padding="@dimen/menu_btn_padding"
			android:layout_marginRight="@dimen/menu_btn_gap"
			android:background="@drawable/btn_blue_bg"
			android:scaleType="centerInside"
			android:src="@drawable/delete" />

		<ImageView
			android:id="@+id/iv_cancel"
			android:layout_width="0dp"
			android:layout_height="match_parent"
			android:layout_weight="1"
			android:padding="@dimen/menu_btn_padding"
			android:background="@drawable/btn_blue_bg"
			android:scaleType="centerInside"
			android:src="@drawable/arrow_left" />

	</LinearLayout>

</LinearLayout>
