<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
	xmlns:android="http://schemas.android.com/apk/res/android"
	xmlns:tools="http://schemas.android.com/tools"
	android:layout_width="match_parent"
	android:layout_height="match_parent"
	android:background="@color/dialog_bg"
	android:orientation="vertical">

	<TextView
		android:id="@+id/tv_content"
		android:layout_width="match_parent"
		android:layout_height="0dp"
		android:layout_weight="1"
		android:gravity="center"
		android:padding="@dimen/dialog_content_padding"
		android:textSize="@dimen/dialog_content_text"
		android:textColor="@color/dialog_content_text"
		android:background="@color/dialog_content_bg"
		android:layout_marginBottom="@dimen/dialog_gap" />

	<LinearLayout
		android:id="@+id/ll_button"
		android:layout_width="match_parent"
		android:layout_height="@dimen/dialog_btn_height"
		android:orientation="horizontal">

		<TextView
			android:id="@+id/tv_btn_0"
			android:layout_width="0dp"
			android:layout_height="match_parent"
			android:layout_weight="1"
			android:gravity="center"
			android:background="@drawable/btn_blue_bg"
			android:textSize="@dimen/dialog_btn_text"
			android:textColor="@color/dialog_btn_text" />

		<TextView
			android:id="@+id/tv_btn_1"
			android:layout_width="0dp"
			android:layout_height="match_parent"
			android:layout_weight="1"
			android:gravity="center"
			android:layout_marginLeft="@dimen/dialog_gap"
			android:background="@drawable/btn_blue_bg"
			android:textSize="@dimen/dialog_btn_text"
			android:textColor="@color/dialog_btn_text" />

		<TextView
			android:id="@+id/tv_btn_2"
			android:layout_width="0dp"
			android:layout_height="match_parent"
			android:layout_weight="1"
			android:gravity="center"
			android:layout_marginLeft="@dimen/dialog_gap"
			android:background="@drawable/btn_blue_bg"
			android:textSize="@dimen/dialog_btn_text"
			android:textColor="@color/dialog_btn_text" />

	</LinearLayout>

</LinearLayout>
